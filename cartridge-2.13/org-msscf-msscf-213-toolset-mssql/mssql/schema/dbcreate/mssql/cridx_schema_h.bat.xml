<RuleSet
	xmlns="uri://org.msscf/msscf/2.0.13/cfgenkb-2.13-ruleset"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xsi:schemaLocation="uri://org.msscf/msscf/2.0.13/cfgenkb-2.13-ruleset file:/opt/msscf/2.0.13/xsd/cfgenkb-2.13-ruleset.xsd"
	ToolSet="mssql"
	Name="schema/dbcreate/mssql/cridx_schema_h.bat"
	Revision="2.13"
	Descr="Microsoft SQL Server Developer Edition Create Schema History Indexes Bash Script">

	<GenFile GenDef="SchemaDef" Name="dbadminfile_CreateAllHIndexes"
			GenerateOnce="false"
			ModuleName=""
		SourceBundle="dbcreate"
		BasePackageName="$lower SchemaName$"
		SubPackageName="mssql"
		ExpansionClassName="cridx_$lower SchemaName$_h"
		ExpansionKeyName="cridx_$lower SchemaName$_h"
		ExpansionFileName="$dbadminfilename_CreateAllHIndexes$"
>@ECHO OFF
REM	@(#) $GenPackageDir$/$GenFileName$
$MssBatScriptLicense$
$parseMSSqlArgs$$validateMSSqlArgs$$defineMSSqlCommands$
$iterate SchemaTables( each maybe_CreateTableHIndexes empty empty )$
</GenFile>

	<GenRule GenDef="Table" Name="maybe_CreateTableHIndexes"
		>$switch BaseHasHistory yes invoke_CreateTableHIndexes default empty$</GenRule>

	<GenRule ScopeDef="SchemaDef" GenDef="Table" Name="invoke_CreateTableHIndexes"
		>$switch HasSuperClassRelation yes invoke_CreateTableHInhIndexes default invoke_CreateTableHBaseIndexes$</GenRule>

	<GenRule GenDef="Table" Name="invoke_CreateTableHInhIndexes"
		>$reference SuperClassRelation reference ToTable invoke_CreateTableHIndexes$$invoke_CreateTableHBaseIndexes$</GenRule>

	<GenRule GenDef="Table" Name="invoke_CreateTableHBaseIndexes"
		>$iterate Index( each maybe_CreateHIndex empty empty )$</GenRule>

	<GenRule ScopeDef="Table" GenDef="Index" Name="maybe_CreateHIndex"
		>$switch IsPrimaryIndex no invoke_CreateHIndex default empty$</GenRule>

	<GenRule ScopeDef="Table" GenDef="Index" Name="invoke_CreateHIndex">%cmddb% &lt;$dbadminfilename_CreateHIndex$ &gt;&gt;%logfilename%
</GenRule>

</RuleSet>
